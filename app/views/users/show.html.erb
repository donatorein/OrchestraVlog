<h1>My page</h1>
<p><%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p><%= @user.profile %></p>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.tweets.each do |t| %>
  <%= t.title %>
  <%= link_to "詳細へ", tweet_path(t.id) %>
  <br>
<% end %>

<!-- 以下はいいね機能を実装している場合-->
<h2>ユーザーがいいねした投稿一覧</h2>
<% @user.liked_tweets.each do |t| %>
  <%= t.user.name %>
  <% if @user.image? %>
       <%= image_tag  @user.image_url, size: '25x25'%>
  <% end %>
  <%= t.title %>
  <br>
<% end %>
<!-- ここまで-->

<%= link_to "ブログ一覧に戻る", tweets_path %>
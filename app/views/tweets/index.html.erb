<div class="ninki">
  <h2>人気の投稿（いいね順）</h2>
</div>
<div class="tweets-container">
  <% @top_liked_tweets.each do |t| %>
    <div class="tweet">
      <div class="main-box">
        <div class="left-container">
          <%= link_to t.title, tweet_path(t.id), class: "t-title" %>
    
          <div class="user-info">
            <div class="t-image">
              <%= image_tag t.user.image_url, size: "24x24" if t.user.image? %>
            </div>
            <%= link_to t.user.name, user_path(t.user_id), class: "t-name" %>
          </div>
    
          <br>
          <%= t.genre %>
          <% about_text = t.about.to_s %>
          <%= simple_format((t.video.blank? && t.twitter_url.blank?) ? (about_text.length > 150 ? "#{about_text[0...150]}..." : about_text) : (about_text.length > 40 ? "#{about_text[0...40]}..." : about_text)) %>
        </div>

        <% if user_signed_in? %>
          <% if current_user.already_liked?(t) %>
            <%= button_to tweet_like_path(id: t.id, tweet_id: t.id), method: :delete do %>
              <i class="fas fa-heart"></i><%= t.likes.count %>
            <% end %>
          <% else %>
            <%= button_to tweet_likes_path(id: t.id, tweet_id: t.id), method: :post do %>
              <i class="fas fa-heart"></i><%= t.likes.count %>
            <% end %>
          <% end %>
        <% else %>
          <i class="fas fa-heart"></i><%= t.likes.count %>
        <% end %>
      </div>

      <div class="titleimage">
        <% if t.image.present? %>
          <%= image_tag t.image_url, size: "500x400" if t.image? %>
        <% else %>
          <p> </p>
        <% end %>
      </div>

      <div class="right-container">
        <% if user_signed_in? && current_user.id == t.user_id %>
          <%= link_to "編集する", edit_tweet_path(t.id), class: "btnlink" %>
          <%= link_to "削除する", tweet_path(t.id), method: :delete, class: "btnlink" %>
        <% end %>
      </div>

      <p class="time"><%= t.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
    </div>
  <% end %>
</div>


<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Splide('#image-carousel', {
      type: 'loop',           // ループさせる
      autoplay: true,         // 自動再生
      interval: 3000,         // 3秒ごとに切り替え
      pauseOnHover: false,    // ホバーしても止めない
      arrows: false,          // 矢印を非表示
      pagination: false,      // ページネーションを非表示
    }).mount();
  });
</script>


